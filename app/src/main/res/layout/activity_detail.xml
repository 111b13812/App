<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/labelCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelCityName"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelRegionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region Name:"
        app:layout_constraintTop_toBottomOf="@+id/cityName"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/regionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cityName"
        app:layout_constraintStart_toEndOf="@+id/labelRegionName"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        app:layout_constraintTop_toBottomOf="@+id/regionName"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/regionName"
        app:layout_constraintStart_toEndOf="@+id/labelAddress"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelDeptNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department Name:"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/deptNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintStart_toEndOf="@+id/labelDeptNm"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelBranchNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Name:"
        app:layout_constraintTop_toBottomOf="@+id/deptNm"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/branchNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/deptNm"
        app:layout_constraintStart_toEndOf="@+id/labelBranchNm"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        app:layout_constraintTop_toBottomOf="@+id/branchNm"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/branchNm"
        app:layout_constraintStart_toEndOf="@+id/labelLatitude"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        app:layout_constraintStart_toEndOf="@+id/labelLongitude"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelDirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction:"
        app:layout_constraintTop_toBottomOf="@+id/longitude"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/longitude"
        app:layout_constraintStart_toEndOf="@+id/labelDirect"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/labelLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Limit:"
        app:layout_constraintTop_toBottomOf="@+id/direct"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/direct"
        app:layout_constraintStart_toEndOf="@+id/labelLimit"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
